  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "cwd": "${workspaceRoot}",
      "args": [
        "--experimental-vm-modules",
        "${workspaceFolder}/node_modules/.bin/jest",
        "--i",
        "--config",
        "jest.config.js"
      ],
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    }
  ]
}
